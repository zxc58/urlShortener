{{#if result}} 
    
    <h2 class="mt-3" id="shortUrl">http://localhost:3000/{{result.shortUrl}}</h2>
    <button class="btn btn-danger btn-lg" id="copyBtn">copy</button>
    <script>
        const copyBtn= document.getElementById("copyBtn");
        copyBtn.addEventListener("click", e=>{
            navigator.clipboard.writeText(document.getElementById("shortUrl").innerText);
        })
    </script>
{{else}}
<form id="form" action="/urls" method="POST">
    <div class="mt-3">
        <input type="url" name="originalUrl" class="form-control" id="input01" placeholder="請輸入url" required>
        <div class="valid-feedback"></div>
        <div class="invalid-feedback"></div>
        <button type="submit" class="mt-3 btn btn-primary" id="submitBtn">提交</button>
    </div>
</form>
<script>
    const Form= document.getElementById("form");
    const submitBtn= document.getElementById("submitBtn");
    submitBtn.addEventListener("click", e=>{
        Form.classList.add("was-validated");
    });
</script>
{{/if}}